<lxs>
    <scene root="demoRoot" axis_length="5" />

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="5" y="15" z="5" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="1" g="1" b="1" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/Ball1.jpg" />
        <texture id="chalk" file="scenes/images/blueChalk.jpg" />
        <texture id="chalkBox" file="scenes/images/chalkSide.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <animations>
        <animation id="anime">
            <keyframe instant="3">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="-360" angle_z="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>
            <keyframe instant="5">
                <translate x="0" y="5" z="0" />
                <rotate angle_x="0" angle_y="-360" angle_z="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>
            <keyframe instant="6">
                <translate x="0" y="5" z="0" />
                <rotate angle_x="180" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>
            <keyframe instant="10">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="10" />
            </keyframe>
            <keyframe instant="10.5">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="0.5" />
            </keyframe>
            <keyframe instant="11">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>
        </animation>
    </animations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>

        <primitive id="cylinder2">
            <cylinder2 base="0.3" top="0.1" height="1" slices="20" stacks="10" />
        </primitive>

        <primitive id="nurbsPlane">
            <plane npartsU="20" npartsV="20" />
        </primitive>
        <primitive id="chandelierInverted">
            <patch npointsU="4" npointsV="4" npartsU="20" npartsV="20">
                <controlpoint xx="-1" yy="0.0" zz="0.0" />
                <controlpoint xx="-1" yy="0.0" zz="1.3333333333333333" />
                <controlpoint xx="1" yy="0.0" zz="1.3333333333333333" />
                <controlpoint xx="1" yy="0.0" zz="0.0" />
                <controlpoint xx="-1" yy="0.0" zz="0.0" />
                <controlpoint xx="-1" yy="1.1547005383792515" zz="0.6666666666666667" />
                <controlpoint xx="1" yy="1.1547005383792515" zz="0.6666666666666667" />
                <controlpoint xx="1" yy="0.0" zz="0.0" />
                <controlpoint xx="-1" yy="0.0" zz="-0.0" />
                <controlpoint xx="-1" yy="1.1547005383792515" zz="-0.6666666666666663" />
                <controlpoint xx="1" yy="1.1547005383792515" zz="-0.6666666666666663" />
                <controlpoint xx="1" yy="0.0" zz="-0.0" />
                <controlpoint xx="-1" yy="0.0" zz="-0.0" />
                <controlpoint xx="-1" yy="1.6328623988631375e-16" zz="-1.3333333333333333" />
                <controlpoint xx="1" yy="1.6328623988631375e-16" zz="-1.3333333333333333" />
                <controlpoint xx="1" yy="0.0" zz="-0.0" />
            </patch>
        </primitive>
        <primitive id="chandelier">
            <patch npointsU="4" npointsV="4" npartsU="20" npartsV="20">
                <controlpoint xx="-1" yy="0.0" zz="0.0" />
                <controlpoint xx="-1" yy="-0.0" zz="-1.3333333333333333" />
                <controlpoint xx="1" yy="-0.0" zz="-1.3333333333333333" />
                <controlpoint xx="1" yy="0.0" zz="0.0" />
                <controlpoint xx="-1" yy="-0.0" zz="0.0" />
                <controlpoint xx="-1" yy="1.1547005383792515" zz="-0.6666666666666667" />
                <controlpoint xx="1" yy="1.1547005383792515" zz="-0.6666666666666667" />
                <controlpoint xx="1" yy="-0.0" zz="0.0" />
                <controlpoint xx="-1" yy="-0.0" zz="-0.0" />
                <controlpoint xx="-1" yy="1.1547005383792515" zz="0.6666666666666663" />
                <controlpoint xx="1" yy="1.1547005383792515" zz="0.6666666666666663" />
                <controlpoint xx="1" yy="-0.0" zz="-0.0" />
                <controlpoint xx="-1" yy="-0.0" zz="-0.0" />
                <controlpoint xx="-1" yy="1.6328623988631375e-16" zz="1.3333333333333333" />
                <controlpoint xx="1" yy="1.6328623988631375e-16" zz="1.3333333333333333" />
                <controlpoint xx="1" yy="-0.0" zz="-0.0" />
            </patch>
        </primitive>
        <primitive id="demoSphere">
            <sphere radius="1" stacks="20" slices="30" />
        </primitive>
        <primitive id="unitSquare">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>
        <primitive id="boardPiece">
            <boardPiece />
        </primitive>
    </primitives>


    <components>
        <component id="topUnitCube">
            <transformation>
                <translate x="0" y="0.5" z="0" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="unitSquare" />

            </children>

        </component>

        <component id="botUnitCube">
            <transformation>
                <translate x="0" y="-0.5" z="0" />
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="unitSquare" />

            </children>

        </component>

        <component id="backUnitCube">
            <transformation>
                <translate x="0" y="0" z="-0.5" />
                <rotate axis="y" angle="180" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="unitSquare" />

            </children>

        </component>

        <component id="frontUnitCube">
            <transformation>
                <translate x="0" y="0" z="0.5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="unitSquare" />

            </children>

        </component>

        <component id="rightUnitCube">
            <transformation>
                <translate x="-0.5" y="0" z="0" />
                <rotate axis="y" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="unitSquare" />

            </children>

        </component>

        <component id="leftUnitCube">
            <transformation>
                <translate x="0.5" y="0" z="0" />
                <rotate axis="y" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="unitSquare" />

            </children>

        </component>
        <component id="unitCube">
            <transformation>
                <scale x="1" y="1" z="1" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="topUnitCube" />
                <componentref id="botUnitCube" />
                <componentref id="leftUnitCube" />
                <componentref id="rightUnitCube" />
                <componentref id="frontUnitCube" />
                <componentref id="backUnitCube" />
            </children>
        </component>

        <component id="PieceBoardLight">
            <transformation>
                <scale x="5" y="0.2" z="5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="unitCube" />
            </children>
        </component>

        <component id="PieceBoardDark">
            <transformation>
                <scale x="5" y="0.2" z="5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="unitCube" />
            </children>
        </component>

        <component id="PieceBoardSwamp">
            <transformation>
                <scale x="5" y="0.2" z="5" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" />
            <children>
                <componentref id="unitCube" />
            </children>
        </component>


        <component id="demoRoot">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="1" />
            <children>
                <primitiveref id="boardPiece" />
            </children>
        </component>
    </components>
</lxs>