<lxs>
    <scene root="demoRoot" axis_length="5" />

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="0" y="40" z="20" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/Ball1.jpg" />
        <texture id="boardTex" file="scenes/images/marbleBoard.jpg" />
        <texture id="wood" file="scenes/images/darkMarble.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="1.0" b="1.0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </material>

        <material id="frogMaterial1" shininess="10">
            <emission r="0.0" g="0.0" b="0" a="1.0" />
            <ambient r="0" g="1.0" b="0" a="1.0" />
            <diffuse r="0" g="1.0" b="0" a="1.0" />
            <specular r="0" g="1.0" b="0" a="1.0" />
        </material>
        <material id="frogMaterial2" shininess="10">
            <emission r="0.0" g="0.0" b="0" a="1.0" />
            <ambient r="1" g="1.0" b="0" a="1.0" />
            <diffuse r="1" g="1.0" b="0" a="1.0" />
            <specular r="1" g="1.0" b="0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <animations>
        <animation id="anime">
            <keyframe instant="3">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="-360" angle_z="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>
            <keyframe instant="5">
                <translate x="0" y="5" z="0" />
                <rotate angle_x="0" angle_y="-360" angle_z="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>
            <keyframe instant="6">
                <translate x="0" y="5" z="0" />
                <rotate angle_x="180" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>
            <keyframe instant="10">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="10" />
            </keyframe>
            <keyframe instant="10.5">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="0.5" />
            </keyframe>
            <keyframe instant="11">
                <translate x="0" y="0" z="0" />
                <rotate angle_x="0" angle_y="0" angle_z="0" />
                <scale x="1" y="1" z="1" />
            </keyframe>
        </animation>
    </animations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>

        <primitive id="cylinder2">
            <cylinder2 base="0.3" top="0.1" height="1" slices="20" stacks="10" />
        </primitive>

        <primitive id="nurbsPlane">
            <plane npartsU="20" npartsV="20" />
        </primitive>
        <primitive id="demoSphere">
            <sphere radius="1" stacks="20" slices="30" />
        </primitive>
        <primitive id="unitSquare">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>
        <primitive id="boardPiece">
            <board />
        </primitive>
        <primitive id="unitCube">
            <unitCube />
        </primitive>
        <primitive id="frog">
            <frog />
        </primitive>
    </primitives>


    <components>

        <component id="test">
            <transformation>
                <translate x="2.5" y="0.2" z="2.5"/>
                <rotate axis="x" angle="-90" />
                <scale x="0.25" y="0.25" z="0.25"/>
            </transformation>
            <materials>
                <material id="frogMaterial2" />
            </materials>
            <texture id="demoTexture" length_s="1" length_t="1" />
            <children>
                <primitiveref  id = "frog" />
            </children>
        </component>

        <component id="boardSideN">
            <transformation>
                <translate x="0" y="0.4" z="-25" />
                <scale x="40" y="1" z="10" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="wood" length_s="1" length_t="1" />
            <children>
                <primitiveref  id = "unitCube" />
            </children>
        </component>

        <component id="boardSideS">
            <transformation>
                <translate x="0" y="0.4" z="25" />
                <scale x="40" y="1" z="10" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="wood" length_s="1" length_t="1" />
            <children>
                <primitiveref  id = "unitCube" />
                
            </children>
        </component>

        <component id="boardSideW">
            <transformation>
                <translate x="-25" y="0.4" z="0" />  
                <scale x="10" y="1" z="60" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="wood" length_s="1" length_t="1" />
            <children>
                <primitiveref  id = "unitCube" />
                
            </children>
        </component>

        <component id="boardSideE">
            <transformation>
                <translate x="25" y="0.4" z="0" />  
                <scale x="10" y="1" z="60" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="wood" length_s="1" length_t="1" />
            <children>
                <primitiveref  id = "unitCube" />
                
            </children>
        </component>
        

        <component id="board">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="boardTex" length_s="1" length_t="1" />
            <children>
                
                <primitiveref id="boardPiece" />
                <componentref  id = "boardSideN" />
                <componentref  id = "boardSideS" />
                <componentref  id = "boardSideE" />
                <componentref  id = "boardSideW" />
            </children>
        </component>


        <component id="demoRoot">
            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="boardTex" length_s="1" length_t="1" />
            <children>
                <componentref id = "board" />
                <componentref id = "test"/>
            </children>
        </component>
    </components>
</lxs>